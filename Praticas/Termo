import random
palavras = ['pauta','aureo','disco','pelos','feios','belos','anzol','tonto','ponto','conta',]

VERMELHO = "\033[0;31m"
VERDE = '\033[0;32m'
PADRAO = '\033[0m'
AMARELO = '\033[1;33m'
letras = ''
segredo = palavras[random.randint(0,len(palavras)-1)].upper()
tentativas = 0
nao_pertence = []
chute = input('dig:')
while tentativas < 6 and len(chute) == 5 and chute != segredo: 
    
    if tentativas > 0:
        chute = input('dig:').upper()
    letras = ''
    
    for pos_chute in range(len(chute)-1):
        posicao_segredo = 0
        conf = True
        conf_certa = True
    
        for pos_segredo in range(len(segredo)-1):
            if chute[pos_chute] == segredo[pos_segredo]:
                conf_certa = False
                letras += VERDE
                letras += chute[pos_chute]
                letras += PADRAO
            if chute[pos_chute] in segredo == True and posicao_segredo == 4 and conf_certa == 0:
                conf = False
                letras += AMARELO
                letras += chute[pos_chute]
                letras += PADRAO
            if conf_certa  and conf and pos_segredo == 4:
                letras += VERMELHO
                letras += chute[pos_chute]
                letras += PADRAO 
                if chute [pos_chute] in nao_pertence == False:
                    nao_pertence += chute[pos_chute] 
    
    print(f'letras que nao pertecem a palavra{nao_pertence}',end='')
    print(letras)
    
    tentativas += 1

if chute == segredo:
    print(f'parabens vocÃª acertou o TERMO de hj{chute}')



print(letras)
